{
    "name": "silamoney/client",
    "description": "The Silamoney SDK for the api 0.2 beta version.",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "JosÃ© Morales",
            "email": "jmorales@digitalgeko.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-gmp": "*",
        "guzzlehttp/guzzle": "^6.4",
        "jms/serializer": "^3.3",
        "respect/validation": "^1.1",
        "kornrunner/secp256k1": "^0.1.2",
        "kornrunner/keccak": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "lint": "phpcs --standard=PSR12 lib && phpcs --standard=PSR12 test",
        "lint:autofix": "phpcbf --standard=PSR12 lib && phpcbf --standard=PSR12 test",
        "test": "phpunit --bootstrap vendor/autoload.php test"
    },
    "autoload": {
        "psr-4": { "Silamoney\\Client\\" : "lib/" }
    },
    "autoload-dev": {
        "psr-4": { "Silamoney\\Client\\" : "test/" }
    }
}
